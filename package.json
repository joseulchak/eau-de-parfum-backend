{
  "name": "eau-de-parfum-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start:build": "tsc",
    "start": "node dist/index.js",
    "@comment dev": "starts database and compiled code",
    "dev": "npm run services:up && tsc -w & nodemon dist/index.js",
    "start:watch": "nodemon api/index.ts",
    "services:up": "docker compose -f api/infra/compose.yaml up -d", 
    "services:stop": "docker compose -f api/infra/compose.yaml stop",
    "services:down": "docker compose -f api/infra/compose.yaml down",
    "@comment migration:execute":"Exectute the pending migrations on prisma schemas",
    "migration:execute": "npx prisma migrate dev",
    "@comment migration:create":"Exectute the pending migrations on prisma schemas",
    "migration:create": "npx prisma migrate dev --create-only",
    "@comment migration:generate":"generates a new prisma migration",
    "migration:generate": "npx prisma generate",
    "postinstall": "npx prisma migrate deploy",
    "postinstall:do not execute": "npx prisma db push --accept-data-loss"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/client": "^6.4.1",
    "@types/express": "^5.0.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.7",
    "dotenv-expand": "^12.0.1",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.8",
    "@types/jsonwebtoken": "^9.0.9",
    "nodemon": "^3.1.9",
    "prisma": "^6.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
